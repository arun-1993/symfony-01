{% extends "base.html.twig" %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}
    <p>ID {{ id }}</p>
    <h3>{{ post.title | upper }}</h3>
    <p>{{ post.text }}</p>
    <p>{{ post.date | date('d:m:Y H:i:s') }}</p>
    <p>{{ 6789 | price }}</p>
    <p>The current locale is {{ locale }}</p>
    <p>Env : {{ app.environment }}</p>
    <p>User : {{ app.user }}</p>
    <p>Request : {{ app.request }}</p>
    <p>Session Started : {{ app.session.isStarted() }}</p>
    <p>Debug : {{ app.debug }}</p>
{% endblock %}